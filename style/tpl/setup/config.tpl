<STYLE>
.pageform .select:hover{
    border: 1px solid tomato;
}
.pageform .subpole {
    padding: 5px;
    background: #eeeeee42;
    width: 97%;
    margin: 8px 2px 2px 2px;
}
.pageform .polebtn {
    margin-top: 10px;
    margin-left: 10px;
}
.pageform .polebtn button:hover{
	background: #1159c4;
	opacity: 1;
}
.pageform .polebtn button {
    background-color: #2b72b1;
    transition: all 0.3s cubic-bezier(0.26, 0.46, 0.45, 0.95) 0s;
    border-radius: 3px;
    font-size: 13px;
    height: 31px;
    line-height: 15px;
    margin-right: 10px;
    padding: 0px 18px;
    opacity: 0.8;
}
.pole1 .img {
    width: 40px;
    text-align: center;
}
.pole1 .img img {
    height: 20px;
    position: relative;
    top: 4px;
}
.pageform .select {
    display: block;
    height: 31px;
    line-height: 35px;
    padding: 0 7px;
    background-color: #fff;
    color: #515356;
    border-radius: 1px;
    font-size: 14px;
    box-shadow: none;
    border: 1px solid #2423232e;
}
</STYLE>
<div class="block-monitor">
<div class="block-head"><h2>{config}</h2></div>
<div class="block-center">
<div class="pageform">
{result}
</div>
</div>
</div>
